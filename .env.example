# Codebase Gardener Environment Configuration
# Copy this file to .env and customize for your setup

# Data directory for storing models, embeddings, and project data
CODEBASE_GARDENER_DATA_DIR=~/.codebase-gardener

# Logging configuration
CODEBASE_GARDENER_LOG_LEVEL=INFO
CODEBASE_GARDENER_DEBUG=false

# Embedding model configuration
CODEBASE_GARDENER_EMBEDDING_MODEL=microsoft/codebert-base
CODEBASE_GARDENER_EMBEDDING_BATCH_SIZE=32
CODEBASE_GARDENER_EMBEDDING_CACHE_SIZE=1000
CODEBASE_GARDENER_EMBEDDING_DEVICE=cpu

# Tree-sitter parser configuration
CODEBASE_GARDENER_SUPPORTED_LANGUAGES=python,javascript,typescript,java,go,rust

# Preprocessing configuration
CODEBASE_GARDENER_MAX_CHUNK_SIZE=2048
CODEBASE_GARDENER_MIN_CHUNK_SIZE=50
CODEBASE_GARDENER_CHUNK_OVERLAP=100

# Performance tuning for Mac Mini M4
CODEBASE_GARDENER_MAX_MEMORY_MB=6000
CODEBASE_GARDENER_MAX_WORKERS=4

# Future: Ollama configuration (when implemented)
# CODEBASE_GARDENER_OLLAMA_BASE_URL=http://localhost:11434
# CODEBASE_GARDENER_OLLAMA_MODEL=codellama:7b

