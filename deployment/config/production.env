# Codebase Gardener Production Environment Configuration
# This file contains production-specific environment variables

# Application Environment
CODEBASE_GARDENER_ENV=production
CODEBASE_GARDENER_DEBUG=false

# Data Directory Configuration
CODEBASE_GARDENER_DATA_DIR=/var/lib/codebase-gardener
CODEBASE_GARDENER_LOG_DIR=/var/log/codebase-gardener

# Logging Configuration
CODEBASE_GARDENER_LOG_LEVEL=INFO
CODEBASE_GARDENER_LOG_FORMAT=json
CODEBASE_GARDENER_LOG_ROTATION=daily
CODEBASE_GARDENER_LOG_RETENTION_DAYS=30

# Performance Tuning for Mac Mini M4
CODEBASE_GARDENER_MAX_MEMORY_MB=2048
CODEBASE_GARDENER_MAX_WORKERS=2
CODEBASE_GARDENER_WORKER_TIMEOUT=300
CODEBASE_GARDENER_MAX_CONCURRENT_PROJECTS=5

# Embedding Configuration
CODEBASE_GARDENER_EMBEDDING_MODEL=nomic-embed-text
CODEBASE_GARDENER_EMBEDDING_BATCH_SIZE=16
CODEBASE_GARDENER_EMBEDDING_CACHE_SIZE=1000
CODEBASE_GARDENER_EMBEDDING_DEVICE=cpu

# Tree-sitter Parser Configuration
CODEBASE_GARDENER_SUPPORTED_LANGUAGES=python,javascript,typescript,java,go,rust,c,cpp
CODEBASE_GARDENER_MAX_FILE_SIZE_MB=10
CODEBASE_GARDENER_EXCLUDE_PATTERNS=node_modules,__pycache__,.git,.venv,venv,build,dist

# Code Processing Configuration
CODEBASE_GARDENER_MAX_CHUNK_SIZE=2048
CODEBASE_GARDENER_MIN_CHUNK_SIZE=50
CODEBASE_GARDENER_CHUNK_OVERLAP=100
CODEBASE_GARDENER_MAX_CONTEXT_LENGTH=4096

# Ollama Configuration
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_TIMEOUT=300
OLLAMA_MAX_RETRIES=3
OLLAMA_RETRY_DELAY=5

# Vector Store Configuration (LanceDB)
CODEBASE_GARDENER_VECTOR_STORE_TYPE=lancedb
CODEBASE_GARDENER_VECTOR_STORE_PATH=/var/lib/codebase-gardener/vector_stores
CODEBASE_GARDENER_SIMILARITY_THRESHOLD=0.7
CODEBASE_GARDENER_MAX_SEARCH_RESULTS=20

# Model Management Configuration
CODEBASE_GARDENER_MODEL_CACHE_DIR=/var/lib/codebase-gardener/models
CODEBASE_GARDENER_MAX_LOADED_MODELS=2
CODEBASE_GARDENER_MODEL_UNLOAD_TIMEOUT=300
CODEBASE_GARDENER_AUTO_DOWNLOAD_MODELS=false

# LoRA Adapter Configuration
CODEBASE_GARDENER_LORA_CACHE_DIR=/var/lib/codebase-gardener/lora_adapters
CODEBASE_GARDENER_MAX_LORA_ADAPTERS=5
CODEBASE_GARDENER_LORA_TRAINING_BATCH_SIZE=4
CODEBASE_GARDENER_LORA_TRAINING_EPOCHS=3

# Web Interface Configuration
CODEBASE_GARDENER_WEB_HOST=127.0.0.1
CODEBASE_GARDENER_WEB_PORT=7860
CODEBASE_GARDENER_WEB_WORKERS=2
CODEBASE_GARDENER_WEB_TIMEOUT=300

# Health Check Configuration
CODEBASE_GARDENER_HEALTH_CHECK_INTERVAL=60
CODEBASE_GARDENER_HEALTH_CHECK_TIMEOUT=30
CODEBASE_GARDENER_HEALTH_CHECK_RETRIES=3

# Backup Configuration
CODEBASE_GARDENER_BACKUP_DIR=/var/lib/codebase-gardener/backups
CODEBASE_GARDENER_BACKUP_RETENTION_DAYS=30
CODEBASE_GARDENER_BACKUP_COMPRESSION=gzip
CODEBASE_GARDENER_AUTO_BACKUP=true
CODEBASE_GARDENER_BACKUP_SCHEDULE=daily

# Security Configuration
CODEBASE_GARDENER_SECURE_MODE=true
CODEBASE_GARDENER_API_KEY_REQUIRED=false
CODEBASE_GARDENER_CORS_ENABLED=false
CODEBASE_GARDENER_MAX_REQUEST_SIZE_MB=100

# Resource Monitoring
CODEBASE_GARDENER_MONITOR_MEMORY=true
CODEBASE_GARDENER_MONITOR_CPU=true
CODEBASE_GARDENER_MONITOR_DISK=true
CODEBASE_GARDENER_ALERT_MEMORY_THRESHOLD=80
CODEBASE_GARDENER_ALERT_CPU_THRESHOLD=80
CODEBASE_GARDENER_ALERT_DISK_THRESHOLD=90

# Development and Testing (disabled in production)
CODEBASE_GARDENER_ENABLE_PROFILING=false
CODEBASE_GARDENER_ENABLE_DEBUG_ENDPOINTS=false
CODEBASE_GARDENER_MOCK_OLLAMA=false